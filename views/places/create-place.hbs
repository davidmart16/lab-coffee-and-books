<div class="container">

    <div class='row justify-content-center'>

        <div class='col-md-6'>
            <h2>Registra tu establecimiento</h2>
            <form action='/crear' method='POST'>
                <div class='form-group'>
                    <label for='name'>Nombre del establecimiento</label>
                    <input type='text' class='form-control' id='name' name='name'>
                </div>
                <div class='form-group'>
                    <label for='type'>Tipo de establecimiento</label>
                    <input type='text' class='form-control' id='type' name='type' placeholder="cafeteria o libreria">
                </div>
                <div class='form-group'>
                    <label for='lat'>Latitud</label>
                    <input class='form-control' name='lat' id='lat' type='text'>
                
                </div>
                <div class='form-group'>
                    <label for='lng'>Longitud</label>
                    <input class='form-control'name='lng' id='lng' type='text'>
                </div>

                <button type='submit' class='btn btn-dark btn-block'>Crear</button>
            </form>

            <hr>
            <a href='/' class='btn btn-dark'>Volver</a>

        </div>
    </div>
</div>